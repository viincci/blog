# .env.example - Environment variables for HRMF Plant Blog

# Site Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# FastAPI Backend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# Database Configuration (for FastAPI backend)
DATABASE_URL=postgresql://username:password@localhost:5432/hrmf_plants

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@hrmf.org.za

# Newsletter Service (EmailOctopus)
EMAILOCTOPUS_API_URL=https://emailoctopus.com/api/1.6
EMAILOCTOPUS_API_KEY=your-emailoctopus-api-key
EMAILOCTOPUS_LIST_ID=your-list-id

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_DATA_DOMAIN=hrmf-blog.vercel.app

# Comments System (Giscus)
NEXT_PUBLIC_GISCUS_REPO=your-github-username/hrmf-blog
NEXT_PUBLIC_GISCUS_REPOSITORY_ID=your-repository-id
NEXT_PUBLIC_GISCUS_CATEGORY=General
NEXT_PUBLIC_GISCUS_CATEGORY_ID=your-category-id

# File Storage (for images and media)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Or use AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=hrmf-media-bucket
AWS_REGION=af-south-1

# Search Service (Algolia - optional)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_ADMIN_API_KEY=your-algolia-admin-key
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key

# Development/Testing
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Security
CORS_ORIGINS=http://localhost:3000,https://hrmf-blog.vercel.app

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Image Processing
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=info
LOG_FILE=logs/hrmf.log
